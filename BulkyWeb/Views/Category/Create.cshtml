@model Category


<form method="post">
    <div class="border border-success rounded p-4 mt-4">
        <div class="row pb-2 text-center">
            <h2 class="text-primary">Create Category</h2>
            <hr />

        </div>
        <div class="mb-3 row p-1">
            <label>Category Name</label> <input asp-for="Name" class="form-control"/>
        </div>
        
        <div class="mb-3 row p-1">
            <label>Display Order</label> <input asp-for="DisplayOrder" class="form-control"/>
        </div>
        <div class="row">
            <div class="col-6">
                <button type="submit" class="btn btn-outline-success w-100 rounded">Create <i class="bi bi-folder-plus"></i></button>

            </div>
            <div class="col-6">
                <a asp-controller="Category" asp-action="Index" class="btn btn-outline-dark rounded w-100">Back to the List <i class="bi bi-back"></i></a>
            </div>
        </div>
       
      
    </div>
</form>